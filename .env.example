# --- Local dev defaults (Docker Compose reads this) ---

# Postgres
POSTGRES_DB=enayet
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Services
API_PORT=4000
WEB_PORT=3000
NGINX_PORT=8080

# Backend runtime
NODE_ENV=development
WORKER_CONCURRENCY=5

# Prisma (container-internal service names)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/enayet?schema=quiz_gen
SHADOW_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/enayet?schema=quiz_gen_shadow

# Queues
REDIS_URL=redis://redis:6379

# Frontend config
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api

# AWS / SES (fill in as applicable)
AWS_REGION=ap-south-1
S3_BUCKET_UPLOADS=your-upload-bucket
S3_BUCKET_SITE=your-frontend-bucket
S3_SIGN_TTL_SEC=86400
SES_FROM=enayetflweb@gmail.com

# Internal API auth
INTERNAL_API_BEARER=replace-with-long-random-token

# LLM scheduler safety factor (see requirements)
SAFETY_FACTOR=0.8

# --- Notes ---
# - For local host tools (e.g., Prisma CLI on your machine), use host=localhost instead of 'postgres'
#   Example: postgresql://postgres:postgres@localhost:5432/enayet?schema=quiz_gen
# - The Compose services use service names (postgres/redis) inside the network.
# - Copy this file to .env and adjust values as needed.

