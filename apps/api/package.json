{
  "name": "@quizgen/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "worker": "tsx watch src/worker.ts",
    "prebuild": "npm run build --workspace @quizgen/shared",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "@quizgen/shared": "0.1.0",
    "bullmq": "^4.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "pino": "^9.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "supertest": "^6.3.4",
    "tslib": "^2.6.2",
    "tsx": "^4.16.2",
    "vite-tsconfig-paths": "^4.3.1",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
