{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "noEmit": true,
    "incremental": true,
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@quizgen/shared": ["../../packages/shared/src"],
      "@tanstack/react-query": ["../../packages/tanstack-react-query/src"],
      "@tanstack/react-query-devtools": [
        "../../packages/tanstack-react-query-devtools/src"
      ],
      "axios": ["../../packages/axios/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vitest.setup.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
